
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:text="SEARCH FOR A FOOTBALL TEAM!"
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abc_list_pressed_holo_light"
    android:textSize="26sp"
    android:fontFamily="sans-serif-smallcaps"
    android:textColor="@android:color/holo_green_dark"
    android:padding="10dp"/>
<EditText
    android:layout_above="@+id/btn_search"
    android:id="@+id/entr_team"
    android:inputType="none|textCapCharacters"
    android:fontFamily="sans-serif-smallcaps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="111px"
    android:textSize="26sp"
    android:fontFamily="sans-serif-smallcaps"
    android:padding="10dp"/>
<Button
    android:id="@+id/btn_search"
    android:layout_alignParentBottom="true"
    android:text="SEARCH!"
    android:layout_width="match_parent"
    android:textSize="35sp"
    android:layout_height="wrap_content"/>
</LinearLayout>